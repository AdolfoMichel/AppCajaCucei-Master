<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/input_module_fondo_lata"
    tools:context=".InputModule.ItemInputBase"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/input_module_barra"
            android:scaleType="fitXY" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:name="udg.cucei.appcajacucei.InputModule.ItemSize"
            android:id="@+id/fragment_Holder"
            class="udg.cucei.appcajacucei.InputModule.ItemSize"/>
    </LinearLayout>


</LinearLayout>
